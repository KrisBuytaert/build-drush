
# Prereqs
#yum install rpm-build
#gem install fpm 
#fpm -s gem -t rpm fpm 

wget http://ftp.drupal.org/files/projects/drush-7.x-4.4.tar.gz
# mkdir -p /usr/local/drush 
# cd /usr/local/ 
tar -vzxf drush-7.x-4.4.tar.gz 

fpm -t rpm -s dir  --prefix=/usr/local -n drush -v 7.x.4.4 -a noarch  /usr/local/drush/ --post-install  ./drush-postinstall


